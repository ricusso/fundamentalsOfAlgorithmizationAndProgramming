<Window x:Class="AuthApp.UserDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Личный кабинет" Height="450" Width="600">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Name="txtWelcome" Text="Личный кабинет" 
                   FontSize="20" HorizontalAlignment="Center" Margin="10"/>

        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock Name="txtProfileInfo" Margin="0,5"/>
            <TextBlock Name="txtUserData" Margin="0,10"/>
            <TextBlock Name="txtUserSpecificInfo" Margin="0,10"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Домой" Click="Home_Click" Margin="5" Width="80"/>
            <Button Content="Выйти" Click="Logout_Click" Margin="5" Width="80"/>
        </StackPanel>
    </Grid>
</Window>