<Window x:Class="AuthApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="250" Width="300">

    <StackPanel Margin="20">
        <TextBlock Text="Вход в систему" FontSize="16" Margin="0,0,0,20"/>

        <TextBlock Text="Логин:"/>
        <TextBox Name="txtLogin" Height="25" Margin="0,5,0,10"/>

        <TextBlock Text="Пароль:"/>
        <PasswordBox Name="txtPassword" Height="25" Margin="0,5,0,10"/>

        <Button Content="Войти" Click="Login_Click" Height="30" Margin="0,10"/>

        <TextBlock Name="txtError" Foreground="Red"/>
    </StackPanel>
</Window>