<Window x:Class="PracticalWork15.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Практическая работа №15" 
        Height="600" Width="800"
        Background="LightGray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Практическая работа №15" 
                   FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

        <!-- Основная область -->
        <TabControl Grid.Row="1" Margin="10">
            <!-- Задание 1: Создание кнопок по клику -->
            <TabItem Header="Задание 1">
                <Border Background="White" MouseDown="Border_MouseDown" 
                        BorderBrush="Black" BorderThickness="1">
                    <TextBlock Text="Кликайте в любом месте для создания кнопки" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontSize="14" Foreground="DarkGray"/>
                </Border>
            </TabItem>

            <TabItem Header="Задание 2">
                <StackPanel Orientation="Vertical">
                    <Button Content="Создать гирлянду" Click="CreateGarland_Click" 
                            Margin="10" Padding="10" FontSize="14"/>
                    <Border Background="White" BorderBrush="Black" BorderThickness="1" 
                            Margin="10" Height="300">
                        <StackPanel x:Name="GarlandPanel" Orientation="Horizontal" 
                                    HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
            </TabItem>

            <TabItem Header="Задание 3" Margin="-1,-2,-18,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="White" BorderBrush="Black" 
                            BorderThickness="1" Margin="10">
                        <Canvas x:Name="MovementCanvas" Background="White">
                            <Ellipse x:Name="MovableObject" Width="50" Height="50" 
                                   Fill="Blue" Stroke="DarkBlue" StrokeThickness="2"
                                   Canvas.Left="100" Canvas.Top="100"/>
                        </Canvas>
                    </Border>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" 
                                HorizontalAlignment="Center" Margin="10">
                        <Button Content="↑" Click="MoveUp_Click" Margin="5" 
                                Padding="15,10" FontSize="14" FontWeight="Bold"/>
                        <Button Content="↓" Click="MoveDown_Click" Margin="5" 
                                Padding="15,10" FontSize="14" FontWeight="Bold"/>
                        <Button Content="←" Click="MoveLeft_Click" Margin="5" 
                                Padding="15,10" FontSize="14" FontWeight="Bold"/>
                        <Button Content="→" Click="MoveRight_Click" Margin="5" 
                                Padding="15,10" FontSize="14" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <StatusBar Grid.Row="2">
            <StatusBarItem Content="Готов к работе"/>
        </StatusBar>
    </Grid>
</Window>